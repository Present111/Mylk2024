<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
          >

            <ImageButton
                android:layout_width="63dp"
                android:layout_height="66dp"
                android:background="@drawable/btn_oval_no_stroke"
                android:src="@drawable/ic_user"
                android:scaleType="centerCrop"
                />


            <Button
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="Bạn bè"
                android:textSize="20dp"
                app:icon="@drawable/ic_friend"
                tools:ignore="NestedWeights"
                android:backgroundTint="@color/btn_color"/>

            <ImageButton
                android:id="@+id/round_image_view"
                android:layout_width="63dp"
                android:layout_height="66dp"
                android:background="@drawable/btn_oval_no_stroke"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_message" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/btn_border_radius"
            android:scaleType="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_flash"
                android:background="@color/transparent_color"/>


            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_oval_stroke"
               />


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_retake"
                android:background="@color/transparent_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử"
                android:textSize="35dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down"
                android:scaleType="centerCrop"
                android:layout_marginTop="7dp"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>